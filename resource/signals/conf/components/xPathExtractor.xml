  <description>Populates title, author and text fields from /doc/title, /doc/author, and /doc/text fields found in input 'bytes' field</description>
  <properties>
    <map name="xpaths">
      <property name="title" value="/doc/title"/>
      <property name="author" value="/doc/author"/>
      <property name="text" value="/doc/text"/>
    </map>
  </properties>
</component>
